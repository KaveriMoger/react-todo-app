{
  "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
			"experimentalObjectRestSpread": true
        }
    },
	"parser": "babel-eslint",
  "rules": {
    "quotes": ["error", "double"]
  },
 
	"globals": {
	    "Promise": "off",
        "var1": "writable",
        "var2": "readonly"
    },
	"plugins": ["prettier"],
  "overrides": [
    {
      "files": ["bin/*.js", "lib/*.js"],
      "excludedFiles": "*.test.js",
      "rules": {
	    "eqeqeq": "off",
        "curly": "error",
        "quotes": ["error", "double"],
		 "prettier/prettier": "error"
      }
    }
  ]
}